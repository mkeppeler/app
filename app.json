{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "app"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "app",
          "image": "master_cfc_8500_default_app_latest"
        }
      },
      "spec": {
        "hostNetwork": false,
        "containers": [
          {
            "name": "app",
            "image": "master.cfc:8500/default/app:latest",
            "imagePullPolicy": "Always",
            "ports": [
              {
                "protocol": "TCP",
                "containerPort": 9080
              },
              {
                "protocol": "TCP",
                "containerPort": 9443
              }
            ],
            "resources": {
              "requests": {
                "cpu": "200m",
                "memory": "256Mi"
              },                
              "limits": {
                "cpu": "1",
                "memory": "512Mi"
              }
            }
          }
        ],
        "imagePullSecrets": [
          {
            "name": "admin.registrykey"
          }
        ]
      }
    }
  }
}
